{
    "name": "dev-card-showcase-ci",
    "version": "1.0.0",
    "description": "CI tooling for dev-card-showcase",
    "private": true,
    "scripts": {
        "size": "size-limit",
        "build:css": "cleancss -O2 -o style.min.css style.css",
        "build:js": "terser js/projects.js -o js/projects.min.js -c -m",
        "optimize:images": "node scripts/optimize-images.js",
        "build": "npm run build:css && npm run build:js && npm run optimize:images"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^11.1.6",
        "clean-css-cli": "^5.6.3",
        "sharp": "^0.34.5",
        "size-limit": "^11.1.6",
        "terser": "^5.46.0"
    },
    "size-limit": [
        {
            "path": "js/index.js",
            "limit": "50 kB"
        },
        {
            "path": "style.css",
            "limit": "200 kB"
        }
    ]
}