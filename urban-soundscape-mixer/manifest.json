{
  "manifest_version": 3,
  "name": "Urban Soundscape Mixer",
  "version": "1.0.0",
  "description": "Blend and customize city sounds (traffic, cafes, parks) for focus or nostalgia.",
  "permissions": ["storage", "activeTab", "background"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
