{
  "version": "1.0.0",
  "name": "Intelligent Response Tone Harmonizer",
  "description": "AI-powered system for ensuring tonal consistency across multi-agent responses",

  "ai": {
    "models": {
      "toneDetector": {
        "model": "bert-tone-v2",
        "version": "2.1.0",
        "accuracy": 0.94,
        "languages": ["en", "es", "fr", "de", "zh", "ja"],
        "cacheEnabled": true,
        "cacheSize": 10000
      },
      "sentimentAnalyzer": {
        "model": "roberta-sentiment",
        "version": "1.3.0",
        "accuracy": 0.91,
        "cacheEnabled": true,
        "cacheSize": 5000
      },
      "contextModel": {
        "model": "gpt-4-turbo",
        "version": "4.0.1",
        "maxTokens": 4096,
        "temperature": 0.3,
        "cacheEnabled": false
      },
      "harmonizationModel": {
        "model": "t5-harmonizer",
        "version": "3.0.0",
        "maxLength": 512,
        "cacheEnabled": true,
        "cacheSize": 2000
      }
    },
    "processing": {
      "batchSize": 10,
      "timeout": 5000,
      "retryAttempts": 3,
      "retryDelay": 1000,
      "parallelProcessing": true,
      "maxConcurrency": 5
    }
  },

  "toneAnalysis": {
    "enabled": true,
    "realTime": true,
    "sensitivity": 0.8,
    "dimensions": {
      "formality": {
        "enabled": true,
        "weight": 0.3,
        "threshold": 0.7
      },
      "emotionality": {
        "enabled": true,
        "weight": 0.25,
        "threshold": 0.6
      },
      "engagement": {
        "enabled": true,
        "weight": 0.25,
        "threshold": 0.8
      },
      "professionalism": {
        "enabled": true,
        "weight": 0.2,
        "threshold": 0.85
      }
    },
    "patterns": {
      "keywords": {
        "professional": ["certainly", "assist", "please", "thank you", "regards", "appreciate"],
        "friendly": ["hey", "great", "awesome", "happy to help", "cheers", "sure"],
        "formal": ["dear", "sir", "madam", "respectfully", "sincerely", "pursuant"],
        "casual": ["hey", "cool", "sure", "no problem", "later", "alright"],
        "enthusiastic": ["amazing", "fantastic", "excited", "wonderful", "brilliant", "awesome"]
      },
      "phrases": {
        "professional": ["I would be happy to", "Please allow me to", "I appreciate your"],
        "friendly": ["I'd love to", "No worries", "Happy to help"],
        "formal": ["I hereby", "Pursuant to", "In accordance with"],
        "casual": ["No prob", "Got it", "Sounds good"],
        "enthusiastic": ["This is amazing", "I'm thrilled", "What an opportunity"]
      }
    }
  },

  "harmonization": {
    "enabled": true,
    "autoApply": false,
    "targetTone": "professional",
    "preserveIntent": true,
    "maxAdjustments": 3,
    "confidenceThreshold": 0.8,
    "strategies": {
      "aggressive": {
        "name": "Aggressive Harmonization",
        "description": "Maximum tone adjustment for consistency",
        "threshold": 0.8,
        "maxChanges": 5,
        "preserveKeywords": false
      },
      "conservative": {
        "name": "Conservative Harmonization",
        "description": "Minimal changes to maintain natural feel",
        "threshold": 0.6,
        "maxChanges": 2,
        "preserveKeywords": true
      },
      "adaptive": {
        "name": "Adaptive Harmonization",
        "description": "Context-aware adjustment based on conversation flow",
        "threshold": 0.7,
        "maxChanges": 3,
        "preserveKeywords": true,
        "contextAwareness": true
      }
    },
    "rules": {
      "preserveMeaning": true,
      "maintainLength": true,
      "avoidRepetition": true,
      "culturalSensitivity": true,
      "brandConsistency": true
    },
    "fallback": {
      "enabled": true,
      "strategy": "minimal_change",
      "maxRetries": 2
    }
  },

  "agents": {
    "maxAgents": 100,
    "autoRegistration": true,
    "profileUpdates": "real-time",
    "defaultProfiles": {
      "customer_support": {
        "baseTone": "professional",
        "flexibility": 0.7,
        "adaptationRate": 0.5,
        "consistencyWeight": 0.8
      },
      "sales": {
        "baseTone": "enthusiastic",
        "flexibility": 0.8,
        "adaptationRate": 0.7,
        "consistencyWeight": 0.6
      },
      "technical": {
        "baseTone": "formal",
        "flexibility": 0.5,
        "adaptationRate": 0.3,
        "consistencyWeight": 0.9
      },
      "general": {
        "baseTone": "friendly",
        "flexibility": 0.6,
        "adaptationRate": 0.4,
        "consistencyWeight": 0.7
      }
    },
    "monitoring": {
      "performanceTracking": true,
      "consistencyAlerts": true,
      "driftDetection": true,
      "updateFrequency": 300000
    }
  },

  "consistency": {
    "validation": {
      "enabled": true,
      "threshold": 0.85,
      "windowSize": 50,
      "alertOnViolation": true
    },
    "driftDetection": {
      "enabled": true,
      "sensitivity": 0.1,
      "timeWindow": 3600000,
      "autoCorrection": false
    },
    "baseline": {
      "updateFrequency": 86400000,
      "minSamples": 100,
      "stabilityPeriod": 604800000
    }
  },

  "monitoring": {
    "enabled": true,
    "dashboard": {
      "realTime": true,
      "refreshInterval": 5000,
      "metricsRetention": 2592000000
    },
    "metrics": {
      "collectionInterval": 5000,
      "retentionDays": 90,
      "aggregation": "hourly",
      "exporters": {
        "prometheus": {
          "enabled": true,
          "endpoint": "/metrics",
          "labels": ["agent", "tone", "channel"]
        },
        "datadog": {
          "enabled": false,
          "apiKey": "${DD_API_KEY}",
          "tags": ["service:tone-harmonizer", "env:production"]
        },
        "newRelic": {
          "enabled": false,
          "licenseKey": "${NR_LICENSE_KEY}",
          "appName": "Tone Harmonizer"
        }
      }
    },
    "alerts": {
      "enabled": true,
      "channels": {
        "slack": {
          "enabled": true,
          "webhookUrl": "${SLACK_WEBHOOK_URL}",
          "channel": "#tone-alerts",
          "username": "Tone Harmonizer",
          "icon": ":musical_note:"
        },
        "email": {
          "enabled": true,
          "smtp": {
            "host": "smtp.gmail.com",
            "port": 587,
            "secure": false,
            "auth": {
              "user": "${SMTP_USER}",
              "pass": "${SMTP_PASS}"
            }
          },
          "from": "alerts@tone-harmonizer.com",
          "to": ["team@example.com"],
          "subject": "Tone Harmonizer Alert"
        },
        "pagerduty": {
          "enabled": false,
          "integrationKey": "${PAGERDUTY_KEY}",
          "serviceName": "Tone Harmonizer"
        },
        "webhook": {
          "enabled": true,
          "url": "${ALERT_WEBHOOK_URL}",
          "headers": {
            "Authorization": "Bearer ${WEBHOOK_TOKEN}",
            "Content-Type": "application/json"
          }
        }
      },
      "rules": {
        "consistency_violation": {
          "severity": "high",
          "condition": "consistency_score < 0.8",
          "message": "Tone consistency dropped below 80% for agent {{agent}}",
          "cooldown": 300000
        },
        "processing_delay": {
          "severity": "medium",
          "condition": "processing_time > 2000",
          "message": "Response processing time exceeded 2 seconds",
          "cooldown": 60000
        },
        "harmonization_failure": {
          "severity": "high",
          "condition": "failure_rate > 0.05",
          "message": "Harmonization failure rate exceeded 5%",
          "cooldown": 300000
        },
        "model_accuracy_drop": {
          "severity": "critical",
          "condition": "model_accuracy < 0.9",
          "message": "AI model accuracy dropped below 90%",
          "cooldown": 600000
        }
      }
    },
    "healthChecks": {
      "enabled": true,
      "interval": 30000,
      "timeout": 10000,
      "endpoints": {
        "aiModels": {
          "enabled": true,
          "url": "/health/models",
          "expectedStatus": 200
        },
        "processing": {
          "enabled": true,
          "url": "/health/processing",
          "expectedStatus": 200
        },
        "database": {
          "enabled": true,
          "url": "/health/database",
          "expectedStatus": 200
        }
      }
    }
  },

  "security": {
    "authentication": {
      "enabled": true,
      "methods": ["oauth2", "apiKey", "jwt"],
      "tokenExpiration": 3600000,
      "refreshTokenEnabled": true
    },
    "authorization": {
      "enabled": true,
      "roles": {
        "admin": {
          "permissions": ["read", "write", "delete", "manage_agents", "view_audit", "configure"]
        },
        "operator": {
          "permissions": ["read", "write", "manage_agents", "view_audit"]
        },
        "analyst": {
          "permissions": ["read", "view_audit", "export_data"]
        },
        "viewer": {
          "permissions": ["read"]
        }
      }
    },
    "encryption": {
      "enabled": true,
      "algorithm": "AES-256-GCM",
      "keyRotation": {
        "enabled": true,
        "interval": 2592000000
      }
    },
    "dataProtection": {
      "piiMasking": true,
      "retentionPolicy": {
        "responses": 2592000000,
        "analytics": 7776000000,
        "audit": 31536000000
      }
    }
  },

  "performance": {
    "optimization": {
      "caching": {
        "enabled": true,
        "strategy": "lru",
        "maxSize": 10000,
        "ttl": 3600000
      },
      "compression": {
        "enabled": true,
        "algorithm": "gzip",
        "level": 6
      },
      "connectionPooling": {
        "enabled": true,
        "maxConnections": 100,
        "idleTimeout": 30000
      }
    },
    "scaling": {
      "autoScaling": {
        "enabled": true,
        "minInstances": 2,
        "maxInstances": 10,
        "cpuThreshold": 70,
        "memoryThreshold": 80
      },
      "loadBalancing": {
        "enabled": true,
        "algorithm": "round_robin",
        "healthChecks": true
      }
    },
    "limits": {
      "maxRequestSize": 1048576,
      "maxConcurrentRequests": 100,
      "rateLimit": {
        "requests": 1000,
        "window": 60000
      }
    }
  },

  "integration": {
    "api": {
      "version": "v1",
      "baseUrl": "/api/v1",
      "cors": {
        "enabled": true,
        "origins": ["*"],
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "headers": ["Content-Type", "Authorization", "X-API-Key"]
      },
      "rateLimiting": {
        "enabled": true,
        "strategy": "sliding_window",
        "limits": {
          "anonymous": { "requests": 100, "window": 3600000 },
          "authenticated": { "requests": 1000, "window": 3600000 }
        }
      }
    },
    "webhooks": {
      "enabled": true,
      "maxSubscriptions": 50,
      "retryPolicy": {
        "maxRetries": 3,
        "backoffMultiplier": 2,
        "maxDelay": 300000
      },
      "events": [
        "response_analyzed",
        "response_harmonized",
        "consistency_violation",
        "agent_registered",
        "model_updated"
      ]
    },
    "streaming": {
      "enabled": true,
      "protocols": ["websocket", "sse"],
      "heartbeatInterval": 30000,
      "maxConnections": 1000
    }
  },

  "simulation": {
    "enabled": true,
    "realTimeUpdates": true,
    "randomEvents": true,
    "dataVolume": "realistic",
    "scenarios": {
      "normal_operation": {
        "probability": 0.7,
        "consistencyRange": [0.85, 0.95],
        "responseTimeRange": [50, 200],
        "harmonizationSuccessRate": 0.98
      },
      "high_load": {
        "probability": 0.15,
        "consistencyRange": [0.75, 0.90],
        "responseTimeRange": [100, 500],
        "harmonizationSuccessRate": 0.95
      },
      "consistency_drift": {
        "probability": 0.1,
        "consistencyRange": [0.60, 0.80],
        "responseTimeRange": [80, 300],
        "harmonizationSuccessRate": 0.90
      },
      "system_stress": {
        "probability": 0.05,
        "consistencyRange": [0.50, 0.75],
        "responseTimeRange": [200, 1000],
        "harmonizationSuccessRate": 0.85
      }
    },
    "agents": {
      "count": 24,
      "activityPatterns": {
        "peak_hours": {
          "start": "09:00",
          "end": "17:00",
          "multiplier": 2.0
        },
        "off_hours": {
          "start": "18:00",
          "end": "08:00",
          "multiplier": 0.3
        }
      }
    },
    "responses": {
      "templates": {
        "professional": [
          "I would be happy to assist you with this matter.",
          "Thank you for bringing this to our attention.",
          "We appreciate your patience in this matter.",
          "Please allow me to help you resolve this issue."
        ],
        "friendly": [
          "Hey there! I'd love to help you out with that.",
          "No worries at all! Let's get this sorted.",
          "Thanks for reaching out! I'm here to help.",
          "Happy to assist! What can I do for you today?"
        ],
        "formal": [
          "Dear valued customer, I am writing to assist you.",
          "Pursuant to your inquiry, I shall provide assistance.",
          "I hereby confirm that we will address your concern.",
          "In accordance with our service standards, we proceed."
        ],
        "casual": [
          "Hey! Got your message. Let's fix this up.",
          "No prob! I'll take care of that for you.",
          "Cool, I can help with that. What's up?",
          "Alright, let's get this sorted out quick."
        ],
        "enthusiastic": [
          "This is amazing! I'm so excited to help you!",
          "What a fantastic opportunity! Let's make this happen!",
          "I'm thrilled to assist you with this wonderful request!",
          "This is going to be absolutely fantastic!"
        ]
      },
      "inconsistencies": {
        "mixed_tones": 0.15,
        "sudden_shifts": 0.08,
        "context_mismatch": 0.05
      }
    }
  },

  "ui": {
    "theme": {
      "primary": "#2563eb",
      "secondary": "#3b82f6",
      "accent": "#60a5fa",
      "background": "#0f172a",
      "surface": "#1e293b",
      "text": "#f1f5f9",
      "textSecondary": "#cbd5e1",
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444",
      "info": "#3b82f6"
    },
    "animations": {
      "enabled": true,
      "duration": 300,
      "easing": "ease-out"
    },
    "charts": {
      "type": "canvas",
      "responsive": true,
      "animation": true,
      "colors": ["#2563eb", "#3b82f6", "#60a5fa", "#93c5fd", "#bfdbfe", "#dbeafe"]
    },
    "notifications": {
      "position": "top-right",
      "duration": 5000,
      "maxVisible": 3,
      "animations": true
    },
    "dashboard": {
      "autoRefresh": true,
      "refreshInterval": 5000,
      "compactMode": false,
      "showTrends": true
    }
  },

  "logging": {
    "level": "info",
    "format": "json",
    "outputs": ["console", "file"],
    "rotation": {
      "enabled": true,
      "maxSize": "10m",
      "maxFiles": 5,
      "compress": true
    },
    "sensitiveData": {
      "masking": true,
      "fields": ["password", "token", "key", "secret", "apiKey"],
      "patterns": ["\\b\\d{4}[ -]?\\d{4}[ -]?\\d{4}[ -]?\\d{4}\\b"]
    },
    "performance": {
      "enabled": true,
      "slowQueryThreshold": 1000,
      "memoryUsage": true,
      "cpuUsage": true
    }
  },

  "backup": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "retention": {
      "daily": 7,
      "weekly": 4,
      "monthly": 12
    },
    "compression": true,
    "encryption": true,
    "verification": true,
    "locations": {
      "local": "/opt/tone-harmonizer/backups",
      "remote": "s3://tone-harmonizer-backups"
    }
  },

  "testing": {
    "unitTests": {
      "enabled": true,
      "coverage": 85,
      "framework": "jest",
      "parallel": true,
      "bail": false
    },
    "integrationTests": {
      "enabled": true,
      "framework": "cypress",
      "baseUrl": "http://localhost:3000",
      "video": true,
      "screenshots": true
    },
    "performanceTests": {
      "enabled": true,
      "framework": "k6",
      "scenarios": {
        "load": {
          "vus": 50,
          "duration": "5m",
          "targetRps": 100
        },
        "stress": {
          "vus": 100,
          "duration": "10m",
          "targetRps": 200
        }
      }
    },
    "aiTests": {
      "enabled": true,
      "accuracyThreshold": 0.9,
      "driftDetection": true,
      "retrainingThreshold": 0.05
    }
  },

  "deployment": {
    "environment": "development",
    "replicas": 2,
    "resources": {
      "requests": {
        "cpu": "500m",
        "memory": "1Gi"
      },
      "limits": {
        "cpu": "2000m",
        "memory": "4Gi"
      }
    },
    "healthChecks": {
      "readiness": {
        "path": "/health/ready",
        "initialDelaySeconds": 30,
        "periodSeconds": 10
      },
      "liveness": {
        "path": "/health/live",
        "initialDelaySeconds": 60,
        "periodSeconds": 30
      }
    },
    "scaling": {
      "hpa": {
        "enabled": true,
        "minReplicas": 2,
        "maxReplicas": 10,
        "targetCPUUtilizationPercentage": 70
      }
    }
  }
}