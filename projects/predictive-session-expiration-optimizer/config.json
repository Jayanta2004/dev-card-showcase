{
  "version": "1.0.0",
  "description": "Configuration for Predictive Session Expiration Optimizer",

  "sessionManagement": {
    "baseTimeout": 60,
    "minTimeout": 15,
    "maxExtension": 240,
    "activityWindow": 30,
    "riskSensitivity": 1.0,
    "optimizationInterval": 10000,
    "gracePeriod": 5,
    "warningThreshold": 10
  },

  "riskAssessment": {
    "enabled": true,
    "rules": {
      "locationChange": {
        "enabled": true,
        "weight": 0.3,
        "threshold": 0.7,
        "action": "shorten_timeout",
        "severity": "high"
      },
      "deviceChange": {
        "enabled": true,
        "weight": 0.25,
        "threshold": 0.6,
        "action": "increase_monitoring",
        "severity": "medium"
      },
      "unusualTiming": {
        "enabled": true,
        "weight": 0.2,
        "threshold": 0.8,
        "action": "require_reauth",
        "severity": "high"
      },
      "lowActivity": {
        "enabled": true,
        "weight": 0.15,
        "threshold": 0.4,
        "action": "gradual_shorten",
        "severity": "low"
      },
      "suspiciousIP": {
        "enabled": true,
        "weight": 0.1,
        "threshold": 0.9,
        "action": "block_session",
        "severity": "critical"
      }
    },
    "scoring": {
      "maxScore": 100,
      "criticalThreshold": 80,
      "highThreshold": 60,
      "mediumThreshold": 40,
      "lowThreshold": 20
    }
  },

  "activityAnalysis": {
    "patterns": {
      "highActivity": {
        "frequencyThreshold": 10,
        "intensityThreshold": 0.8,
        "timeWindow": 30,
        "confidence": 0.9
      },
      "normalActivity": {
        "frequencyThreshold": 5,
        "intensityThreshold": 0.5,
        "timeWindow": 30,
        "confidence": 0.7
      },
      "lowActivity": {
        "frequencyThreshold": 1,
        "intensityThreshold": 0.2,
        "timeWindow": 30,
        "confidence": 0.5
      },
      "unusualPattern": {
        "frequencyThreshold": 0.5,
        "intensityThreshold": 0.1,
        "timeWindow": 60,
        "confidence": 0.8
      }
    },
    "intensityCalculation": {
      "clickWeight": 0.3,
      "scrollWeight": 0.2,
      "typingWeight": 0.4,
      "navigationWeight": 0.1,
      "decayFactor": 0.95
    },
    "historySize": 100,
    "analysisInterval": 5000
  },

  "optimization": {
    "algorithms": {
      "adaptiveTimeout": {
        "enabled": true,
        "adjustmentFactor": 1.0,
        "smoothingFactor": 0.8,
        "minimumAdjustment": 5,
        "maximumAdjustment": 120
      },
      "riskBasedAdjustment": {
        "enabled": true,
        "riskMultiplier": 0.7,
        "activityMultiplier": 1.3,
        "contextMultiplier": 1.1
      },
      "behavioralLearning": {
        "enabled": true,
        "learningRate": 0.1,
        "memorySize": 1000,
        "patternRetention": 30
      }
    },
    "constraints": {
      "maxConcurrentOptimizations": 100,
      "optimizationCooldown": 30000,
      "batchSize": 50,
      "priorityQueue": true
    }
  },

  "monitoring": {
    "enabled": true,
    "metrics": {
      "sessionMetrics": true,
      "optimizationMetrics": true,
      "riskMetrics": true,
      "performanceMetrics": true
    },
    "alerts": {
      "highRiskSessions": {
        "enabled": true,
        "threshold": 10,
        "channels": ["dashboard", "console"],
        "cooldown": 300000
      },
      "optimizationFailure": {
        "enabled": true,
        "threshold": 5,
        "channels": ["dashboard", "console"],
        "cooldown": 600000
      },
      "performanceDegradation": {
        "enabled": true,
        "threshold": 0.8,
        "channels": ["dashboard"],
        "cooldown": 900000
      }
    },
    "logging": {
      "level": "info",
      "format": "json",
      "retention": "7d",
      "maxSize": "100m"
    }
  },

  "simulation": {
    "enabled": true,
    "scenarios": {
      "normalUser": {
        "description": "Typical user with regular activity patterns",
        "sessionCount": 50,
        "activityPattern": "normal",
        "riskLevel": "low",
        "duration": 3600000
      },
      "powerUser": {
        "description": "Highly active user requiring extended sessions",
        "sessionCount": 20,
        "activityPattern": "high",
        "riskLevel": "low",
        "duration": 7200000
      },
      "casualUser": {
        "description": "Intermittent user with low activity",
        "sessionCount": 100,
        "activityPattern": "low",
        "riskLevel": "medium",
        "duration": 1800000
      },
      "suspiciousUser": {
        "description": "User with suspicious behavior patterns",
        "sessionCount": 10,
        "activityPattern": "unusual",
        "riskLevel": "high",
        "duration": 900000
      },
      "mobileUser": {
        "description": "Mobile user with location changes",
        "sessionCount": 30,
        "activityPattern": "normal",
        "riskLevel": "medium",
        "locationChanges": true,
        "duration": 2700000
      }
    },
    "dataGeneration": {
      "realisticTimestamps": true,
      "variedIntensities": true,
      "randomAnomalies": 0.05,
      "geographicDistribution": true
    }
  },

  "ui": {
    "theme": {
      "primary": "#8b5cf6",
      "secondary": "#a78bfa",
      "background": "#0f172a",
      "surface": "#1e293b",
      "text": "#e2e8f0",
      "textSecondary": "#cbd5e1",
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444",
      "info": "#3b82f6"
    },
    "dashboard": {
      "refreshInterval": 5000,
      "maxSessionsPerPage": 25,
      "chartUpdateInterval": 10000,
      "animationDuration": 300
    },
    "notifications": {
      "enabled": true,
      "position": "top-right",
      "duration": 5000,
      "maxConcurrent": 3
    }
  },

  "security": {
    "encryption": {
      "enabled": true,
      "algorithm": "AES-256-GCM",
      "keyRotation": "30d"
    },
    "audit": {
      "enabled": true,
      "events": [
        "session_created",
        "session_extended",
        "session_shortened",
        "session_expired",
        "risk_assessed",
        "optimization_applied"
      ],
      "retention": "90d"
    },
    "compliance": {
      "gdpr": true,
      "hipaa": false,
      "pci": false,
      "sox": false
    }
  },

  "performance": {
    "caching": {
      "enabled": true,
      "ttl": 300000,
      "maxSize": "500m"
    },
    "optimization": {
      "batchProcessing": true,
      "parallelAnalysis": true,
      "memoryPooling": true
    },
    "limits": {
      "maxSessions": 100000,
      "maxHistoryPerSession": 1000,
      "maxConcurrentAnalysis": 100
    }
  },

  "integrations": {
    "authentication": {
      "providers": ["local", "oauth", "saml"],
      "sessionSync": true,
      "tokenValidation": true
    },
    "monitoring": {
      "datadog": {
        "enabled": false,
        "apiKey": "",
        "appKey": ""
      },
      "newrelic": {
        "enabled": false,
        "licenseKey": ""
      },
      "splunk": {
        "enabled": false,
        "endpoint": "",
        "token": ""
      }
    },
    "storage": {
      "redis": {
        "enabled": false,
        "host": "localhost",
        "port": 6379,
        "password": ""
      },
      "postgresql": {
        "enabled": false,
        "host": "localhost",
        "port": 5432,
        "database": "sessions",
        "username": "",
        "password": ""
      }
    }
  },

  "experimental": {
    "features": {
      "predictiveTimeout": false,
      "behavioralBiometrics": false,
      "aiOptimization": false,
      "federatedLearning": false
    },
    "algorithms": {
      "machineLearning": {
        "enabled": false,
        "modelPath": "./models/",
        "trainingInterval": "24h"
      },
      "neuralNetwork": {
        "enabled": false,
        "layers": [64, 32, 16],
        "activation": "relu"
      }
    }
  }
}